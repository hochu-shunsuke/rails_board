<%= form_with model: post do |f| %>
  <% if post.errors.any? %>
    <div style="color: red;">
      <h2><%= post.errors.count %>件のエラーがあります</h2>
      <ul>
        <% post.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= f.label :title, "タイトル" %><br>
    <%= f.text_field :title %>
  </div>

  <div>
    <%= f.label :content, "内容" %><br>
    <%= f.text_area :content %>
  </div>

  <% # プレビュー用のコントローラーを紐づけ %>
  <div data-controller="preview">
    <div>
      <%= f.label :image, "画像" %><br>
      <% # アクション名を preview#display に変更 %>
      <%= f.file_field :image, data: { action: "change->preview#display" } %>
    </div>

    <div>
      <% # ターゲット名を previewImage に統一 %>
      <% if post.image.attached? %>
        <%= image_tag post.image, data: { preview_target: "previewImage" }, style: "max-width: 300px; display: block; margin-top: 10px;" %>
      <% else %>
        <img data-preview-target="previewImage" src="" style="max-width: 300px; display: none; margin-top: 10px;">
      <% end %>
    </div>
  </div>

  <div style="margin-top: 20px;">
    <%= f.submit yield(:button_text) %>
  </div>
<% end %>


<h1>会員登録</h1>

<%= form_with model: @user, url: sign_up_path do |f| %>
  <% if @user.errors.any? %>
    <div style="color: red;">
      <ul>
        <% @user.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= f.label :email_address, "メールアドレス" %><br>
    <%= f.email_field :email_address, required: true %>
  </div>

  <div>
    <%= f.label :password, "パスワード" %><br>
    <%= f.password_field :password, required: true %>
  </div>

  <div>
    <%= f.label :password_confirmation, "パスワード（確認用）" %><br>
    <%= f.password_field :password_confirmation, required: true %>
  </div>

  <div style="margin-top: 20px;">
    <%= f.submit "登録する" %>
  </div>
<% end %>

<%= link_to "アカウントをお持ちの方はこちら", new_session_path %>
